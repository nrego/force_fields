; in case of posres, etc
; define        =

; RUN CONTROL shit

integrator      = md
dt              = 0.002
; set to taste
nsteps          = 50000 ; 100 ps

comm-mode       = Linear
nstcomm         = 10
comm-grps       = System

; OUTPUT CONTROL OPTIONS
; Output frequency for coords (x), velocities (v) and forces (f)
nstxout                  = 500
nstvout                  = 500
nstfout                  = 0
; Output frequency for energies to log file and energy file
nstlog                   = 500
nstcalcenergy            = 10
nstenergy                = 500
; Output frequency and precision for xtc file
nstxtcout                = 0
xtc-precision            = 1000

; NEIGHBOR SEARCHING
nstlist         = 10
ns_type         = grid
pbc             = xyz
rlist           = 1.0

; ELECTROSTATICS
coulombtype     = PME
rcoulomb        = 1.0

; EWALD stuff
fourierspacing  = 0.1
pme_order       = 6
ewald_rtol      = 1e-6
ewald_geometry  = 3d
optimize_fft    = no

; VDW
vdwtype         = cut-off
rvdw            = 1.0
DispCorr        = no

; TEMPERATURE COUPLING
; Used for NVT equilibration only - Berendsen doesn't reproduce correct kinetic ensemble
tcoupl          = Vrescale
tc_grps         = System
tau_t           = 0.5 
ref_t           = 300 

; VELOCITY GENERATION
gen_vel         = yes
gen_temp        = 300
gen_seed        = -1

; BOND CONSTRAINTS
constraints          = h-bonds
constraint-algorithm = lincs
lincs_order          = 12
lincs_iter           = 1
continuation         = no

; Pull stuff for COM restraint
freezegrps      = DUM 
freezedim       = Y Y Y

pull            = umbrella
pull_geometry   = distance
pull_group0     = DUM
pull_group1     = Protein
pull_k1         = 1000
pull_nstfout    = 0
pull_nstxout    = 0

